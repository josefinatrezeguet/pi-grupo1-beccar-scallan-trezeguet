<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include("./partials/head") %>
<!-- Include Head -->

<body>
    <!-- Header -->
    <% if (locals.user != undefined) { %>
        <%- include("./partials/headerLogueado") %>
    <% } else { %>
        <%- include("./partials/header") %>
    <% } %>
    <!-- /Header -->

    <!-- Datos del usuario -->
    <section class="info-usuario container products-wrapper">
        <div class="row">
            <div class="img-container offset-3 col-2">
                <img src="<%- usuario.fotoPerfil %>" class="foto-perfil">
            </div>
            <div class="data-container col-6">
                <div class="d-flex align-items-center ">
                    <h1 class="main-title"><%- usuario.mail %>
                        <% if (condition) { %>
                            <a href="/users/edit">
                                <i class="fas fa-cog"></i>
                            </a>
                        <% } %>
                    </h1>
                    <% if (condition) { %>
                        <a class="btn mt-3 ml-4" href="/users/edit">EDITAR PERFIL</a>
                    <% } %>
                </div>
                <div>
                    <ul>
                        <li class="email"><%- usuario.mail %></li>
                    </ul>
                </div><br>
                <div>
                    <ul>
                        <li><%= productos.length %> productos</li>
                        <li>200 seguidores</li>
                        <li><%= comentarios %> comentarios</li>
                    </ul>
                </div>
            </div>
        </div>
    </section>
    <!-- /Datos del usuario -->

<!-- Mis productos -->
<div class="container products-wrapper">
    <div class="row">
        <div class="col-12">
            <h2 class="products-title">Productos publicados</h2>
        </div>
        <% for(let i = 0; i < productos.length; i++) { %>
            <div class="col-12 col-sm-6 col-lg-3">
                <section class="product-box">
                    <a href="/product/id/<%= productos[i].id %>">
                        <figure class="product-box_image">
                            <img src=<%= productos[i].imagen %>>
                        </figure>
                        <article class="product-box_data">
                            <h2><%= productos[i].nombre %></h2>
                            <p><%= productos[i].descripcion %></p>
                        </article>
                    </a>
                </section>
            </div>
        <% }; %>
    </div>
</div>
<!-- /Mis productos -->
    <!-- /Mis productos -->

    <!-- footer -->
    <%- include("./partials/footer") %>
    <!-- /footer -->
</body>  
</html>
