<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include("./partials/head") %>
<!-- Include Head -->

<body>
	<!-- Header -->
	<% if (locals.user != undefined) { %>
		<%- include("./partials/headerLogueado") %>
	<% } else { %>
		<%- include("./partials/header") %>
	<% } %>
	<!-- /Header -->

	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Ingresar</h2>
			</div>

			<form action="/users/login" method="post"> 
				<input class="form-input" type="email" id="email" name="email" placeholder="Email" required value="<%= locals.old !== undefined && old.email ? old.email : "" %>">
				<% if (locals.errors && errors.email) { %>
					<p class="feedback"><%= errors.email.msg %></p>
				<% } %>

				<input class="form-input" type="password" name="contrasenia" id="contrasenia" placeholder="Contraseña" required minlength="4" value="<%= locals.old !== undefined && old.contrasenia ? old.contrasenia : "" %>">
				<% if (locals.errors && errors.contrasenia) { %>
					<p class="feedback"><%= errors.contrasenia.msg %></p>
				<% } %>

				<label for="recordarme" class="label">Recordarme</label>	
				<input class="checkbox" type="checkbox" id="recordarme" name="recordarme"><br>
		
				<button class="form-label" type="submit" value="Iniciar sesión" name="ingresar" placeholder="Ingresar">Iniciar sesión</button>
			</form>	

		</div>
	</div>

	<!-- footer -->
	<%- include("./partials/footer") %>
	<!-- /footer -->
</body>
</html>
