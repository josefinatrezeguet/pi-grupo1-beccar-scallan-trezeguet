<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include("./partials/head") %>
<!-- Include Head -->

<body>
	<!-- Header -->
	<%- include("./partials/headerLogueado") %>
	<!-- /Header -->

	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Editar producto</h2>
			</div>
			<form action="/product/edit" method="post">

				<input type="hidden" name="id" value="<%= productos.id %>">

				<label class="label" for="nombre">Nombre del producto</label><br>
				<input class="form-input" value="<%= productos.nombre %>" type="text" id="nombre" name="nombre" required><br>

				<label class="label" for="imagen">Imagen</label><br>
				<input class="form-input file-select" value="<%= productos.imagen %>" type="text" id="imagen" name="imagen" required><br>
	
				<label class="label" for="descripcion">Descripci√≥n</label><br>
				<textarea class="form-input" id="descripcion" name="descripcion" required><%= productos.descripcion %></textarea><br>			 
	
				<button class="form-label" type="submit">Aceptar cambios</button>			 
			</form>	
		</div>
	</div>

	<!-- footer -->
	<%- include("./partials/footer") %>
	<!-- /footer -->
</body>
</html>





	