<!DOCTYPE html>
<html lang="es">
	
<!-- Include Head -->
<%- include("./partials/head") %>
<!-- Include Head -->

<body>
		<!-- Header -->
		<% if (locals.user != undefined) { %>
			<%- include("./partials/headerLogueado") %>
		<% } else { %>
			<%- include("./partials/header") %>
		<% } %>
		<!-- /Header -->

	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Editar producto</h2>
			</div>
			<form action="/product/edit" method="post">

				<input type="hidden" name="id" value="<%= productos.id %>">
				<input type="hidden" name="idUsuario" value="<%= productos.usuario.id %>">

				<label class="label" for="nombre">Nombre del producto</label><br>
				<input class="form-input" type="text" id="nombre" name="nombre" required value="<%= (locals.old && locals.old.nombre !== undefined) ? locals.old.nombre : (productos && productos.nombre) %>"><br>
				<% if (locals.errors && errors.nombre) { %>
					<p class="feedback"><%= errors.nombre.msg %></p>
				<% } %>

				<label class="label" for="imagen">Imagen</label><br>
				<input class="form-input file-select" type="text" id="imagen" name="imagen" required value="<%= (locals.old && locals.old.imagen !== undefined) ? locals.old.imagen : (productos && productos.imagen) %>"><br>
				<% if (locals.errors && errors.imagen) { %>
					<p class="feedback"><%= errors.imagen.msg %></p>
				<% } %>
	
				<label class="label" for="descripcion">Descripci√≥n</label><br>
				<textarea class="form-input" id="descripcion" name="descripcion" required><%= (locals.old && locals.old.descripcion !== undefined) ? locals.old.descripcion : (productos && productos.descripcion) %></textarea><br>
				<% if (locals.errors && errors.descripcion) { %>
					<p class="feedback"><%= errors.descripcion.msg %></p>
				<% } %>
	
				<button class="form-label" type="submit">Aceptar cambios</button>			 
			</form>	
		</div>
	</div>

	<!-- footer -->
	<%- include("./partials/footer") %>
	<!-- /footer -->
</body>
</html>





	