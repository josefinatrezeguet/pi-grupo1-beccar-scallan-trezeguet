<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include("./partials/head") %>
<!-- Include Head -->

<body>
  	<!-- Header -->
    <% if (locals.user != undefined) { %>
        <%- include("./partials/headerLogueado") %>
    <% } else { %>
        <%- include("./partials/header") %>
    <% } %>
    <!-- /Header -->

    <div class="container products-wrapper">
        <div class="row">
            <div class="col-12">
                <h2 class="products-title">Registrate</h2>
            </div>
            <form action="/users/register" method="post">
                <input class="form-input" type="email" name="email" placeholder="Email" required>
                <% if (locals.errors && errors.email) { %>
                    <p class="feedback"><%= errors.email.msg %></p>
                <% } %>
                <input class="form-input" type="text" name="usuario" placeholder="Usuario" required>
                <% if (locals.errors && errors.usuario) { %>
                    <p class="feedback"><%= errors.usuario.msg %></p>
                <% } %>
                <input class="form-input" type="password" name="contrasenia" id="contrasenia" placeholder="Contraseña" required minlength="4">
                <% if (locals.errors && errors.contrasenia) { %>
                    <p class="feedback"><%= errors.contrasenia.msg %></p>
                <% } %>
    
                <label for="fecha" class="label">Fecha de nacimiento</label>
                <input class="form-input" type="date" name="fecha">
                <% if (locals.errors && errors.fecha) { %>
                    <p class="feedback"><%= errors.fecha.msg %></p>
                <% } %>
    
                <label for="dni" class="label">Número de documento</label>
                <input class="form-input" type="number" name="dni">
                <% if (locals.errors && errors.dni) { %>
                    <p class="feedback"><%= errors.dni.msg %></p>
                <% } %>
    
                <label for="fotoPerfil" class="label">Foto de perfil</label>
                <input class="form-input" type="text" name="fotoPerfil">
                <% if (locals.errors && errors.fotoPerfil) { %>
                    <p class="feedback"><%= errors.fotoPerfil.msg %></p>
                <% } %>
    
                <button class="form-label" type="submit">Registrarse</button>
            </form>    
        </div>
    </div>

    <!-- footer -->
    <%- include("./partials/footer") %>
    <!-- /footer -->
</body>
</html>
