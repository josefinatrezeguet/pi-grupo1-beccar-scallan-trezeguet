<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
	<%- include("./partials/head") %>

	<body>
		<!-- Header -->
		<%- include("./partials/header") %>
		<!-- /Header -->
		
		<!-- Banner -->
		<div class="banner">
			<img src="images/banner.png">
		</div>
		<!-- /Banner -->

		<!-- Novedades -->
		<div class="container products-wrapper">
			<div class="row">
				<div class="col-12">
					<h2 class="products-title">NUEVOS PRODUCTOS</h2>
				</div>
				<%for (let index = 0; index < 4; index++) {%>
					<div class="col-12 col-sm-6 col-lg-3">
						<section class="product-box">
							<a href="/product"> 
								<figure class="product-box_image">
									<img src=<%= productos[index].imagen %>>
								</figure>
								<article class="product-box_data">
									<h2><%= productos[index].nombre %></h2>
									<p><%= productos[index].descripcion %></p>
									<p>Comentarios: <%= productos[index].comentarios.length %></p>
								</article>
							</a>
						</section>
					</div>
				<%}%>
			</div>
		</div>
		<!-- /Novedades -->
		
		<!-- Más comentados -->
		<div class="container products-wrapper">
			<div class="row">
				<div class="col-12">
					<h2 class="products-title">MÁS COMENTADOS</h2>
				</div>
				<%for (let index = 4; index < 8; index++) {%>
					<div class="col-12 col-sm-6 col-lg-3">
						<section class="product-box">
							<a href="/product">
								<figure class="product-box_image">
									<img src=<%= productos[index].imagen %>>
								</figure>
								<article class="product-box_data">
									<h2><%= productos[index].nombre %></h2>
									<p><%= productos[index].descripcion %></p>
									<p>Comentarios: <%= productos[index].comentarios.length %></p>
								</article>
							</a>
						</section>
					</div>
				<%}%>
			</div>
		</div>		
		<!-- /Más comentados -->

		<!-- footer -->
		<%- include("./partials/footer") %>
		<!-- /footer -->
	</body>	

</html>